{
  "version": 2,
  "crons": [
    {
      "path": "/api/bundles-data",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/send-reminders",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/send-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/send-review-requests",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/tech-reminders?type=day_before",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/tech-reminders?type=morning_of",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/tech-reminders?type=two_hour",
      "schedule": "0 * * * *"
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" },
        { "key": "Access-Control-Expose-Headers", "value": "Server-Timing, Cache-Control" }
      ]
    }
  ]
}
